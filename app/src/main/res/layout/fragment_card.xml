<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".controller.gameActivity.CardFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dealer1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ace_diamonds" />

        <ImageView
            android:id="@+id/dealer2"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/ace_clubs" />

        <ImageView
            android:id="@+id/dealer3"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/ace_hearts" />

        <ImageView
            android:id="@+id/dealer4"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/ace_hearts" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/player1"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/four_clubs" />

        <ImageView
            android:id="@+id/player2"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/ten_clubs" />

        <ImageView
            android:id="@+id/player3"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:src="@drawable/six_clubs" />

        <ImageView
            android:id="@+id/player4"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:src="@drawable/six_clubs" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Dealer cards"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Player cards"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>